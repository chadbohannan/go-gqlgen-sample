# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Article {
  id: ID! # ! means required
  text: String!
  userID: Int!
}

type Query {
  articles: [Article!]!
  article(id: Int): Article!
}

input NewArticle {
  text: String!
  userID: Int!
}

input EditArticle {
  id: Int!
  text: String!
}

type Mutation {
  newArticle(input: NewArticle!): Int!
  setArticleText(input: EditArticle!): User!
}
